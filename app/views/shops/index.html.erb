<h1>Listing shops</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
    <tr>
      <td><%= shop.name %></td>
      <td><%= shop.location %></td>
      <td><%= link_to 'Show shop contents', shop , :class =>'button-1'%></td> <!-- products_path -->
      <td><%= link_to 'Edit', edit_shop_path(shop), :class =>'button-1' %></td>
      <td><%= link_to 'Remove shop', shop, :class =>'button-1', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new Shop', new_shop_path , :class =>'button-1'%>
