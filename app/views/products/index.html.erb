<h1>Listing products</h1>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td>GHC<%= product.price %></td>
      <td><%= image_tag product.image_url %></td>
      <td><button><%= link_to 'Show', product %></button></td>
      <td><button><%= link_to 'Edit', edit_product_path(product) %></button></td>
      <td><button><%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'Add Product', new_product_path %></button>
